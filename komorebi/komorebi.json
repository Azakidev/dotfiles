{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",

  "default_workspace_padding": 4,
  "default_container_padding": 4,

  "border": true,
  "border_width": 3,
  "border_offset": -1,

  "animation": {
    "enabled": true,
    "duration": 200,
    "style": "EaseOutCirc"
  },

  "theme": {
    "palette": "Base16",
    "name": "Darcula",
    "unfocused_border": "Base04",
    "bar_accent": "Base0E"
  },

  "stackbar": {
    "height": 30,
    "mode": "OnStack",
    "tabs": {
      "width": 200
    }
  },

  "mouse_follows_focus": false,
  "focus_follows_mouse": "Komorebi",

  "float_rules": [
    {
      "kind": "Title",
      "id": "- Krita",
      "matching_strategy": "EndsWith"
    },
    {
      "kind": "Title",
      "id": "Arc extension popup",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Arc Settings",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "Qt51513QWindowIcon",
      "matching_strategy": "Equals"
    }
  ],

  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        }
      ]
    }
  ]
}
