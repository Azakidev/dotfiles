{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.bar.json",
  
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 45,
      "right": 0,
      "bottom": 50
    }
  },

  "frame": {
    "inner_margin": {
      "x": 15,
      "y": 2
    }
  },
  
  "font_family": "Nunito",

  "theme": {
    "palette": "Base16",
    "name": "Dracula",
    "accent": "Base0E"
  },
  
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour"
      }
    },
    {
      "Battery": {
        "enable": false
      }
    }
  ]
}